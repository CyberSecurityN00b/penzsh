#!/bin/bash
# Setting up local variables for penzsh 'framework'
pzcore_dir_enum=$PENZSH_DIR/enum
pzcore_dir_loot=$PENZSH_DIR/loot
pzcore_dir_research=$PENZSH_DIR/research
pzcore_dir_server=$PENZSH_DIR/server
pzcore_dir_tools=/opt/penzsh
pzcore_target=$PENZSH_TARGET
pzcore_os=$PENZSH_OS

pzcore_timestamp=$(date +%Y-%m-%d.%H:%M:%S)

pzcore_lhost=$PENZSH_LHOST

pzcore_cmds_prefix=""
if ( $PENZSH_PROXY_NET ) ; then
	if [ -f "$pzcore_dir_tools/proxychains/proxychains" ] ; then
		pzcore_cmds_prefix = "$pzcore_dir_tools/proxychains/proxychains -f $PENZSH_PROXY_NET_DIR/.penzsh_proxy_net/proxychains.conf "
	else
		pzcore_func_warn "Proxychains not installed to $pzcore_dir_tools!"
		pzcore_func_yesno "Install latest proxychains to $pzcore_dir_tools?"
		if [ $REPLY = "y" ] ; then
			pzcore_func_tools_proxychains
		else
			pzcore_func_warn "Unable to continue with proxied command."
		fi
	fi
fi

### COLORS ####################################################################
PZCORE_COLOR_OFF='\033[0m'
PZCORE_COLOR_RED='\033[0;31m'
PZCORE_COLOR_GREEN='\033[0;32m'

PZCORE_COLOR_NORMAL=$PZCORE_COLOR_GREEN
PZCORE_COLOR_WARNING=$PZCORE_COLOR_RED
###############################################################################

### TOOLS #####################################################################
pzcore_func_tools_proxychains()
{
	mkdir -p $pzcore_dir_tools/proxychains
	git clone https://github.com/haad/proxychains.git "$pzcore_dir_tools/proxychains"
	CFLAGS=-Wno-error $pzcore_dir_tools/proxychains/configure
	make -C "$pzcore_dir_tools/proxychains"
	# Built when it was proxychains4, but why not...
	mv "$pzcore_dir_tools/proxychains4" "$pzcore_dir_tools/proxychains" 2>/dev/null
	mv "$pzcore_dir_tools/proxychains5" "$pzcore_dir_tools/proxychains" 2>/dev/null
	mv "$pzcore_dir_tools/proxychains6" "$pzcore_dir_tools/proxychains" 2>/dev/null
}
###############################################################################

pzcore_func_echo()
{
	echo -e "${PZCORE_COLOR_NORMAL}||PENZSH|| >>${PZCORE_COLOR_OFF} $1"
}

pzcore_func_warn()
{
	echo -e "${PZCORE_COLOR_WARNING}||PENZSH|| >> WARNING:${PZCORE_COLOR_OFF} $1"
}

pzcore_func_yesno()
{
	pzcore_func_echo "$1"
	read -q "REPLY?(y/n): "
	echo
}

pzcore_func_require()
{
	# $1 - String used to check existence of requirement
	# $2 - String used to install necessary requirement
	
	eval "$1 >/dev/null 2>&1"
	if [ "$?" = 1 ] ; then
		pzcore_func_warn "This command is missing a requirement!"
		pzcore_func_yesno "Should I run the following to fulfill this requirement?\n\t$2"
		if [[ $REPLY =~ ^[Yy]$ ]] ; then
			eval "$2"
		else
			pzcore_func_warn "FAILED to run command without requirement!"
			return 1
		fi
	fi
}

pzcore_func_validate_filename()
{
	echo ${@:1} | sed -e 's/[^A-Za-z0-9._-]/_/g'
}

pzcore_func_is_ssl()
{
	# $1 - URL with port, i.e., 10.10.10.10:80 or google.com:443
	echo "Q" | $pzcore_cmds_prefix openssl s_client -quiet -connect $1 2>/dev/null
	if [ "$?" = 1 ] ; then
		return 0
	else
		return 1
	fi
}
